@{
    Layout = "_Layout";
}
@model PERI.Agenda.Web.Models.ForgotPassword
@using Core = PERI.Agenda.Core

<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<div class="container col-md-6 col-md-offset-3">
    <div class="panel-heading">
        <div class="panel-title text-center">
            <h3><span class='glyphicon glyphicon-send'></span>&nbsp;&nbsp;&nbsp;Agenda</h3>
            <hr />
            <h4>Forgot password? We got you.</h4>
            <small>Please enter your email to begin process.</small>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.TextBoxFor(x => x.Email, new { placeholder = "Email", @class = "form-control", required = "required", @type = "email", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <center>
                <div class="g-recaptcha" data-sitekey="@((ViewBag.ReCaptcha as Core.GoogleReCaptcha).PublicKey)"></div>
            </center>
        </div>

        <center>
            @Html.ValidationSummary()
        </center>

        <button type="submit" class="btn btn-primary btn-block">Submit</button>
        <a class="btn btn-default btn-block" href="~/Authentication">Back</a>
    }

    @{
        Html.RenderPartial("Partial/Footer");
    }
</div>