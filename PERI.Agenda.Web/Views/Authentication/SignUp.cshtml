@{
    Layout = "_Layout";
}
@model PERI.Agenda.Web.Models.SignUp
@using Core = PERI.Agenda.Core

<link id="bsdp-css" href="https://uxsolutions.github.io/bootstrap-datepicker/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet">
<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script src="https://uxsolutions.github.io/bootstrap-datepicker/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<div class="container col-md-6 col-md-offset-3">
    <div class="panel-heading">
        <div class="panel-title text-center">
            <h3><img src="~/agenda.png" style="margin-right:8px; height:24px;" /><span style="vertical-align:middle">Agenda</span></h3>
            <hr />
            <h4>Please sign-up for your account.</h4>
        </div>
    </div>

    <div class="alert alert-info" role="alert">
        By signing-up you are agreeing to our <a href="~/terms"><b>Terms and Conditions</b></a> provided.
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>First name*</label>
            @Html.TextBoxFor(x => x.FirstName, new { placeholder = "First name", @class = "form-control", required = "required", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <label>Middle initial <small>(1 letter)</small></label>
            @Html.TextBoxFor(x => x.MiddleInitial, new { placeholder = "Middle initial", @class = "form-control", pattern = "[A-Za-z]{1}", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <label>Last name*</label>
            @Html.TextBoxFor(x => x.LastName, new { placeholder = "Last name", @class = "form-control", required = "required", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <label>Nick name</label>
            @Html.TextBoxFor(x => x.NickName, new { placeholder = "Nick", @class = "form-control", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <label>Address</label>
            @Html.TextBoxFor(x => x.Address, new { placeholder = "Address", @class = "form-control", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <label>Mobile</label>
            @Html.TextBoxFor(x => x.Mobile, new { placeholder = "Mobile", @class = "form-control", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <label>Email*</label>
            @Html.TextBoxFor(x => x.Email, new { placeholder = "Email", @class = "form-control", required = "required", @type = "email", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <label>Birth date</label>
            @Html.TextBoxFor(x => x.BirthDate, new { placeholder = "Birth date", @class = "form-control", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <label>Community*</label>
            @Html.DropDownListFor(x => x.CommunityId, ViewBag.Communities as SelectList, "--SELECT--", new { @class = "form-control", @required = "", @autocomplete = "off" })
        </div>
        <div class="form-group">
            <center>
                <div class="g-recaptcha" data-sitekey="@((ViewBag.ReCaptcha as Core.GoogleReCaptcha).PublicKey)"></div>
            </center>
        </div>

        <center>
            @Html.ValidationSummary()
        </center>

        <button type="submit" class="btn btn-primary btn-block">Sign-up</button>
        <a class="btn btn-default btn-block" href="~/">Back</a>
    }

    @{
        Html.RenderPartial("Partial/Footer");
    }
</div>
<br />
<br />

<script type="text/javascript">
    $(function () {
        $('#BirthDate').datepicker();
    });
</script>
