@{
    Layout = "_Layout";
}
@model PERI.Agenda.Web.Models.Login

<div class="container col-md-6 col-md-offset-3">
    <div class="panel-heading">
        <div class="panel-title text-center">
            <h3><span class='glyphicon glyphicon-send'></span>&nbsp;&nbsp;&nbsp;Agenda</h3>
            <hr />
            <h4>Please sign-in.</h4>
        </div>
    </div>
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.TextBoxFor(x => x.Email, new { placeholder = "Email", @class = "form-control", required = "required", @type = "email", @autocomplete = "off" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Password, new { placeholder = "Password", @class = "form-control", required = "required", @type = "password" })
        </div>
        <button type="submit" class="btn btn-primary btn-block">Sign-in</button>
        <a class="btn btn-default btn-block" href="~/Authentication/ForgotPassword">Forgot password?</a>
        <br />
        <center>- or -</center>
        <br />
        <a class="btn btn-success btn-block" href="~/Authentication/SignUp">Sign-up</a>
    }

    @{
        Html.RenderPartial("Partial/Footer");
    }
</div>